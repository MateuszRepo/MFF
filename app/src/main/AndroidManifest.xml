<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mateusz.mff">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ativities.MainActivity"
            android:theme="@style/Theme.Design.NoActionBar"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ativities.DetailsActivity"
            android:theme="@style/AppTheme"
            android:label="Szczegóły"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".ativities.SettingsActivity"
            android:theme="@style/AppTheme"
            android:label="Ustawienia">

        </activity>
    </application>

</manifest>